<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_bg_3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:id="@+id/jackPotAndValueContainer"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_margin="@dimen/play_jackpot_margin"
            android:id="@+id/jackpotImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jackpot"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$10,000,000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_centerHorizontal="true"
            android:id="@+id/jackPotText"
            android:layout_below="@id/jackpotImage"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/jackPotAndValueContainer"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:id="@+id/pickedNumbersContainer"
        android:layout_centerHorizontal="true">
        <EditText
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:background="@drawable/round_number_text_field"
            android:id="@+id/selectedNumbers"
            android:fontFamily="sans-serif-large"
            android:textAlignment="center"
            android:text="@string/defaultTextNumberField"
            android:textStyle="bold"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_height="30dp"
            android:layout_width="150dp">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/pickedNumbersContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridContainer">
        <GridView
            android:layout_margin="@dimen/play_grid_margin"
            android:layout_below="@id/jackPotAndValueContainer"
            android:id="@+id/gridView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="7">
        </GridView>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/gridContainer"
            android:layout_centerHorizontal="true">

            <LinearLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:paddingLeft="40dp">
                <Button
                    android:onClick="randomButtonClicked"
                    android:fontFamily="sans-serif-large"
                    android:textStyle="bold"
                    android:background="@drawable/round_button_random"
                    android:layout_margin="@dimen/button_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/randomButton"
                    android:text="Random"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>
            </LinearLayout>

            <LinearLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:paddingLeft="40dp">
                <Button
                    android:textStyle="bold"
                    android:layout_margin="@dimen/button_margin"
                    android:background="@drawable/round_button_play"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/playButton"
                    android:text="Play"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>
            </LinearLayout>

        </LinearLayout>
</RelativeLayout>


